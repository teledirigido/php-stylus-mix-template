@require 'stylus/base/reset'
@require 'stylus/base/grid'
@require 'stylus/base/gaps'

html, body
  margin:0
  padding:0
  min-height:100%
  width:100%

body
  font-family:body-font
  color: #111
  font-size: 1rem
  font-smooth: auto
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: greyscale
