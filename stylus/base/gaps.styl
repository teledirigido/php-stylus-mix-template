$unit = 'em'

for i in 1 .. 10
  .p{i}
    padding unit(i, $unit)
  .m{i}
    margin unit(i, $unit)
  .mt{i}
    margin-top unit(i, $unit)
  .mb{i}
    margin-bottom unit(i, $unit)
  .pt{i}
    padding-top unit(i, $unit)
  .pr{i}
    padding-right unit(i, $unit)
  .pb{i}
    padding-bottom unit(i, $unit)
.pt0
  padding-top: 0
.pt05
  padding-top: 0.5rem
.pb05
  padding-bottom: 0.5rem

@media nondesktop
  for i in 1 .. 3
    .p{i}--nondesktop
      padding unit(i, $unit)
    .pt{i}--nondesktop
      padding-top unit(i, $unit)
    .pb{i}--nondesktop
      padding-bottom unit(i, $unit)

@media nonmobile
  for i in 1 .. 3
    .pb{i}--nonmobile
      padding-top unit(i, $unit)
  for i in 1 .. 3
    .mb{i}--nonmobile
      margin-bottom unit(i, $unit)
@media tablet
  for i in 1 .. 3
    .p{i}--tablet
      padding unit(i, $unit)
    .pt{i}--tablet
      padding-top unit(i, $unit)
@media mobile
  for i in 1 .. 3
    .p{i}--mobile
      padding unit(i, $unit)
    .pt{i}--mobile
      padding-top unit(i, $unit)
    .pb{i}--mobile
      padding-bottom unit(i, $unit)
    .mb{i}--mobile
      margin-bottom unit(i, $unit)
@media responsivemenu
  for i in 1 .. 3
    .p{i}--responsivemenu
      padding unit(i, $unit)
.mtauto
  margin-top: auto